<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".login.SignUpFragment"
        android:id="@+id/scroll">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".main.slideshow.SlideshowFragment"
        android:layout_margin="@dimen/spacing_medium">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small3">

        <TextView
                android:id="@+id/level_bronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text = "브론즈"
                />
        <TextView
                android:id="@+id/level_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text = "실버"
                />
        <TextView
                android:id="@+id/level_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text = "골드"
                />
        <TextView
                android:id="@+id/level_nice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text = "나이스러너"
                android:gravity="center"
                />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
            android:id="@+id/level_img"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/spacing_small">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "러닝 데이"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_small" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/spacing_xlarge3"
                android:text=""
                android:textStyle="bold"
                android:textColor = "@color/black"
                android:layout_margin="@dimen/spacing_small"
                android:layout_gravity="center"
                android:id="@+id/level_count"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/spacing_small">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 달린 거리"
                android:layout_marginTop="@dimen/spacing_small"
                android:id="@+id/level_text" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/spacing_xlarge3"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="@dimen/spacing_small"
                android:layout_gravity="center"
                android:id="@+id/level_dist" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ProgressBar
            android:id="@+id/level_progress"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:progressBackgroundTint="@color/text_color_gray"
            android:progressTint="@color/nicerun_blue"
            android:max="100"
            android:progress="0" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text = ""
            android:layout_marginBottom="@dimen/spacing_xlarge3"
            android:id="@+id/level_remain"/>

</LinearLayout>

</ScrollView>