<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#4FAAFD"
    card_view:cardElevation="3dp"
    card_view:contentPadding="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/NoMoreSaveData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_more_save_data"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/recommand_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_medium"
                android:orientation="vertical"
                android:layout_gravity="top"
                android:gravity="top">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/recommand_dist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textSize="@dimen/text_size_small2"
                        android:textColor="@color/text_color_black"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/recommand_save"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/save_on" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tag1_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/flat"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/tag2_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/hill"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/tag3_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/alone"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/tag4_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/group"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/tag5_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/walking"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/tag6_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/run"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/recommand_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small2"
                    android:textColor="@color/text_color_gray"/>

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>